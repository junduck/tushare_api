{
  "api_name": "tdx_index",
  "title": "通达信板块信息",
  "description": "获取通达信板块基础信息，包括概念板块、行业、风格、地域等限量：单次最大1000条数据，可根据日期参数循环提取权限：用户积累6000积分可调取，具体请参阅积分获取办法",
  "input_params": [
    {
      "name": "ts_code",
      "type": "str",
      "required": "N",
      "description": "板块代码：xxxxxx.TDX"
    },
    {
      "name": "trade_date",
      "type": "str",
      "required": "N",
      "description": "交易日期(格式：YYYYMMDD）"
    },
    {
      "name": "idx_type",
      "type": "str",
      "required": "N",
      "description": "板块类型：概念板块、行业板块、风格板块、地区板块"
    }
  ],
  "output_params": [
    {
      "name": "ts_code",
      "type": "str",
      "required": "Y",
      "description": "板块代码"
    },
    {
      "name": "trade_date",
      "type": "str",
      "required": "Y",
      "description": "交易日期"
    },
    {
      "name": "name",
      "type": "str",
      "required": "Y",
      "description": "板块名称"
    },
    {
      "name": "idx_type",
      "type": "str",
      "required": "Y",
      "description": "板块类型"
    },
    {
      "name": "idx_count",
      "type": "int",
      "required": "Y",
      "description": "成分个数"
    },
    {
      "name": "total_share",
      "type": "float",
      "required": "Y",
      "description": "总股本(亿)"
    },
    {
      "name": "float_share",
      "type": "float",
      "required": "Y",
      "description": "流通股(亿)"
    },
    {
      "name": "total_mv",
      "type": "float",
      "required": "Y",
      "description": "总市值(亿)"
    },
    {
      "name": "float_mv",
      "type": "float",
      "required": "Y",
      "description": "流通市值(亿)"
    }
  ]
}