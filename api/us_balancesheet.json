{
  "api_name": "us_balancesheet",
  "title": "美股资产负债表",
  "description": "获取美股上市公司资产负债表（目前只覆盖主要美股和中概股）权限：需单独开权限或有15000积分，具体权限信息请参考权限列表提示：当前接口按单只股票获取其历史数据，单次请求最大返回10000行数据，可循环提取",
  "input_params": [
    {
      "name": "ts_code",
      "type": "str",
      "required": "Y",
      "description": "股票代码"
    },
    {
      "name": "period",
      "type": "str",
      "required": "N",
      "description": "报告期（格式：YYYYMMDD，每个季度最后一天的日期，如20241231)"
    },
    {
      "name": "ind_name",
      "type": "str",
      "required": "N",
      "description": "指标名(如：新增借款）"
    },
    {
      "name": "report_type",
      "type": "str",
      "required": "N",
      "description": "报告期类型(Q1一季报Q2半年报Q3三季报Q4年报)"
    },
    {
      "name": "start_date",
      "type": "str",
      "required": "N",
      "description": "报告期开始时间（格式：YYYYMMDD）"
    },
    {
      "name": "end_date",
      "type": "str",
      "required": "N",
      "description": "报告结束始时间（格式：YYYYMMDD）"
    }
  ],
  "output_params": [
    {
      "name": "ts_code",
      "type": "str",
      "required": "Y",
      "description": "股票代码"
    },
    {
      "name": "end_date",
      "type": "str",
      "required": "Y",
      "description": "报告期"
    },
    {
      "name": "ind_type",
      "type": "str",
      "required": "Y",
      "description": "报告期类型(Q1一季报Q2半年报Q3三季报Q4年报)"
    },
    {
      "name": "name",
      "type": "str",
      "required": "Y",
      "description": "股票名称"
    },
    {
      "name": "ind_name",
      "type": "str",
      "required": "Y",
      "description": "财务科目名称"
    },
    {
      "name": "ind_value",
      "type": "float",
      "required": "Y",
      "description": "财务科目值"
    },
    {
      "name": "report_type",
      "type": "str",
      "required": "Y",
      "description": "报告类型"
    }
  ]
}